{
  "compilerOptions": {
    "target": "ESNEXT",
    "experimentalDecorators": true,
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src"
  },
  "include": ["src"]
}
